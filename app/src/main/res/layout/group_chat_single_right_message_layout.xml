<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:layout_marginStart="75dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/group_right_message_backgound">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_chat_message_user_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/group_chat_message_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/group_chat_message_user_profile"
            android:layout_alignParentStart="false"
            android:layout_toEndOf="@+id/group_chat_message_user_profile"
            android:fontFamily="@font/alegreya"
            android:paddingEnd="5dp"
            android:text="UserId"
            android:textColor="@color/Dgrey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/group_chat_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_chat_message_user_profile"
            android:layout_alignParentEnd="false"
            android:fontFamily="@font/alegreya"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp"
            android:text="User Message"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>